                <td>{{ opportunite.id }}</td>
                <td>{{ opportunite.nom }}</td>
                <td>{{ opportunite.descreption }}</td>
                <td>{{ opportunite.type }}</td>
                <td>
                    {# <a href="{{ path('app_opportunite_show', {'id': opportunite.id}) }}">show</a>
                    <a href="{{ path('app_opportunite_edit', {'id': opportunite.id}) }}">edit</a> 
                </td>
            </tr> #}
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
            </div>
            </div>
        </div>

{% endblock %}
