<div class="container-fluid page-header py-5">
    <div class="container text-center py-5">
        <h1 class="display-2 text-white mb-4 animated slideInDown">Evenement</h1>
    </div>
</div>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" autocomplete="off" class="border p-4 rounded">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.titre, 'Titre de l\'événement', {'class': 'form-label'}) }}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Titre de l\'événement'}}) }}
                    {{ form_errors(form.titre) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.localisation, 'Localisation de l\'événement', {'class': 'form-label'}) }}
                    {{ form_widget(form.localisation, {'attr': {'class': 'form-control', 'placeholder': 'Localisation de l\'événement'}}) }}
                    {{ form_errors(form.localisation) }}
                </div>

                <div class="row mb-3">
                    <div class="col">
                        {{ form_label(form.date, 'Date de l\'événement', {'class': 'form-label'}) }}
                        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.date) }}
                    </div>
                    <div class="col">
                        {{ form_label(form.heure, 'Heure de l\'événement', {'class': 'form-label'}) }}
                        {{ form_widget(form.heure, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.heure) }}
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.nb_participant, 'Nombre de participants', {'class': 'form-label'}) }}
                    {{ form_widget(form.nb_participant, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nb_participant) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.image, 'Image de l\'événement', {'class': 'form-label'}) }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.image) }}
                    {% if evenement.image %}
                        <img src="{{ asset('uploads/' ~ evenement.image) }}" alt="Image de l'événement" class="mt-2 img-fluid">
                    {% else %}
                        <p>Aucune image disponible</p>
                    {% endif %}
                </div>

                <button type="submit" class="btn btn-primary">Enregistrer</button>

                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}




