{% extends 'base.html.twig' %}

{% block title %}Postuler index{% endblock %}

{% block body %}
    <h1>Postuler index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>MotivationText</th>
                <th>Cv</th>
                <th>CreatedAt</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for postuler in postulers %}
            <tr>
                <td>{{ postuler.id }}</td>
                <td>{{ postuler.motivationText }}</td>

                <td><a href="{{ path('pdf_view', {'filename': postuler.cv}) }}">View PDF</a>
                </td>
                <td>{{ postuler.createdAt ? postuler.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ postuler.status }}</td>
                <td>
                    {% if is_granted('ROLE_USER') and not is_granted('ROLE_SOCIETE')%}

                <a href="{{ path('app_postuler_edit', {'id': postuler.id}) }}">edit</a>
            
                {{ include('postuler/_delete_form.html.twig') }}
            {% endif %}
            
            {% if is_granted('ROLE_SOCIETE')%}
            
            <a href="{{ path('app_postuler_accept', {'id': postuler.id}) }}">Accept</a>
            
            <a href="{{ path('app_postuler_reject', {'id': postuler.id}) }}">Decline</a>
            {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
