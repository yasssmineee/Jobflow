{% extends 'home/userlogin.html.twig' %}

{% block header %}
    <!-- Include the header block from the base template -->
    {{ parent() }}
{% endblock %}

{% block body %}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Project Index</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <style>
            /* Custom Styles */
            body {
                font-family: Arial, sans-serif;
                color: #333;
            }
            .container {
                padding: 20px;
            }
            .create-new-link {
                margin-top: 20px;
                padding: 10px 20px;
                background-color: #28a745;
                color: #fff;
                text-decoration: none;
                border-radius: 4px;
                transition: background-color 0.3s ease;
                display: inline-block;
            }
            .create-new-link:hover {
                background-color: #218838;
            }
        </style>
    </head>
    <body>
    <div class="container">
        <h1>Project Index</h1>

        <!-- Search Form -->
        <form id="searchForm" action="{{ path('app_project_index') }}" method="GET" class="mb-3">
            <div class="input-group">
                <input type="text" id="searchInput" name="search" class="form-control" placeholder="Search by project name">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>

        <!-- Sort by Project Name Button -->
        <form id="sortByProjectNameForm" action="{{ path('app_project_index') }}" method="GET" class="mb-3">
            <button type="submit" name="sortBy" value="name" class="btn btn-secondary">Sort by Project Name</button>
        </form>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Project Name</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="projectTableBody">
                <!-- Table rows will be dynamically populated here -->
                {% for project in projects %}
                <tr>
                    <td>{{ project.id }}</td>
                    <td>{{ project.prname }}</td>
                    <td>{{ project.description }}</td>
                    <td>{{ project.type }}</td>
                    <td>{{ project.stdate ? project.stdate|date('Y-m-d') : '' }}</td>
                    <td>{{ project.enddate ? project.enddate|date('Y-m-d') : '' }}</td>
                    <td class="actions">
                        <a href="{{ path('app_project_show', {'id': project.id}) }}" class="btn btn-info">Show</a>
                        <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-primary">Edit</a>
                        <a href="{{ path('app_project_pdf', {'id': project.id}) }}" target="_blank" class="btn btn-success">Generate PDF</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7" class="text-center">No records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_project_new') }}" class="create-new-link">Create New</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        // JavaScript for dynamic search functionality
        const searchInput = document.getElementById('searchInput');
        const projectTableBody = document.getElementById('projectTableBody');

        searchInput.addEventListener('input', function(event) {
            const searchQuery = event.target.value.trim();

            // Send an AJAX request to fetch search results
            fetch(`/project?search=${searchQuery}`)
                .then(response => response.text())
                .then(html => {
                    projectTableBody.innerHTML = html;
                })
                .catch(error => {
                    console.error('Error fetching search results:', error);
                });
        });
    </script>
    </body>
    </html>
{% endblock %}
