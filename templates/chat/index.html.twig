{% extends 'home/userlogin.html.twig' %}
{% block header %}
    <!-- Include the header block from the base template -->
    {{ parent() }}
{% endblock %}
{% block body %}
<html>
<head>
    <title>Chat index</title>
</head>
<body>


    <h1>Chat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chat in chats %}
            <tr>
                <td>{{ chat.content }}</td>
                <td>
                    <a href="{{ path('app_chat_show', {'id': chat.id}) }}">show</a>
                    <a href="{{ path('app_chat_edit', {'id': chat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chat_new') }}">Create new</a>

</body>
</html>
{% endblock %}
