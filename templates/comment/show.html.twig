{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
          

            <div class="card p-3" style="margin-bottom: 50px;">
                <div class="d-flex justify-content-between align-items-center" >
                    <div class="user d-flex flex-row align-items-center">
                        <img src="https://i.imgur.com/hczKIze.jpg" width="30" class="user-img rounded-circle mr-2">
                        <span>
                            <small class="font-weight-bold text-primary">{{ comment.name }}</small> 
                            <small class="font-weight-bold">{{ comment.contenu }}</small>
                        </span>
                    </div>
                    <small>{{ comment.date ? comment.date|date('Y-m-d') : '' }}</small>
                </div>
                <div class="action d-flex justify-content-between mt-2 align-items-center">
                    <div class="reply px-4">
                        <small>    {{ include('comment/_delete_form.html.twig') }}
</small>
                        <span class="dots"></span>
                        <small><a href="{{ path('app_comment_edit', {'id': comment.id}) }}">edit</a></small>
                        <span class="dots"></span>
                        <small>Translate</small>
                    </div>
                    <div class="icons align-items-center">
                        <i class="fa fa-star text-warning"></i>
                        <i class="fa fa-check-circle-o check-icon"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
